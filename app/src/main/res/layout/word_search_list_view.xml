<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    android:backgroundTint="@color/color_background_2"
    android:layout_margin="@dimen/margin_1">

    <TextView
        android:id="@+id/list_search_word_key"
        android:text="key"
        android:textSize="@dimen/size_text_normal"
        android:textStyle="bold"
        android:textColor="@color/color_text_1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/list_search_word_type"
        android:text="type"
        android:textSize="@dimen/size_text_normal"
        android:textStyle="italic"
        android:textColor="@color/color_text_3"
        android:layout_below="@+id/list_search_word_key"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>