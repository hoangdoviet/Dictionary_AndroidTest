<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.HashtagActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_do_quest_toolbar"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/color_primary_1"/>

    <TextView
        android:id="@+id/activity_do_quest_noquest_tv"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="You're not having any quest right now!"
        android:textSize="22dp"
        android:visibility="visible" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_do_quest_listkey"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_do_quest_toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/activity_do_quest_save_btn"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_do_quest_toolbar"
        android:layout_alignStart="@+id/activity_do_quest_noquest_tv"
        android:layout_alignEnd="@+id/activity_do_quest_noquest_tv"
        android:layout_marginStart="251dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/custom_border"
        android:backgroundTint="@color/colorAccent"
        android:text="Save Quest and exit" />

</RelativeLayout>