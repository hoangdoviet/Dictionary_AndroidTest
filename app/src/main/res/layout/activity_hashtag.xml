<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="activities.HashtagActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_hashtag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_hashtag_listword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/activity_hashtag_toolbar"/>

</RelativeLayout>